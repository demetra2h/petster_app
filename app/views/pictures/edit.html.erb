<div class="container" id="add_post_container">
<h1 class="text-center">Edit your picture</h1>

<%= form_for @picture do |f| %>

  <div class="form-group">
    <%= f.label :picture_link %>
    <input class="form-control" <%= f.text_field :imgur_id %>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <input class="form-control" <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <input class="form-control" id="description" <%= f.text_field :description %>
  </div>

  <%= f.submit "Update picture" %>

<% end %>

<%= link_to '<button type="button">Back to Petster</button>' .html_safe, pictures_path %>
