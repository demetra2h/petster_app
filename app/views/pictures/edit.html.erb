<div class="container" id="add_post_container">
<h1 class="text-center">Edit your picture</h1>

<div class="col-md-4 col-md-offset-4">
<%= form_for @picture do |f| %>


  <div class="form-group">
    <%= f.label :title %>
    <input class="form-control" <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', id: 'description', :maxlength =>130, :placeholder => "Write a description here, 130 characters max" %>
  </div>

  <div class="submit">
    <%= f.submit "Update picture" %>
  </div>

<% end %>

<%= link_to '<button type="button">Back to Petster</button>' .html_safe, pictures_path %>
