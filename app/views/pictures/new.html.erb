<h1>Post a picture</h1>

<%= form_for @picture, url: users_path, html: { multipart: true } do |f| %>

  <div>
    <%= f.label :imgur_id %>
    <%= f.text_field :imgur_id %>
    <%= f.file_field :picture %>
  </div>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <%= f.submit "Post a picture" %>

<% end %>

<%= link_to "Back to Petster", pictures_path %>
