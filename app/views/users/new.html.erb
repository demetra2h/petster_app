<div class="container" id="sign_up_container">
  <h1 class="text-center">Sign up for Petster</h1>

<div class="col-md-4 col-md-offset-4">
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <input class="form-control" <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <input class="form-control" <%= f.text_field :email %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <input class="form-control" <%= f.password_field :password %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <input class="form-control" <%= f.password_field :password_confirmation %>
  </div>

  <div class="submit"><%= f.submit %></div>

<% end %>
