<!DOCTYPE html>
<html>
<head>
  <title>Petster</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
</head>
<body>

<p>
  <% if current_user %>
    Woof woof, hi <%= current_user.name %>!
    &nbsp;&nbsp;|&nbsp;&nbsp;
    <%= link_to '<button type="button">Logout</button>' .html_safe, session_path('dummy'), method: :delete %>
  <% else %>
    <%= link_to '<button type="button">Login</button>' .html_safe, login_path %>
    &nbsp;&nbsp;|&nbsp;&nbsp;
    <%= link_to '<button type="button">Sign Up</button>' .html_safe, new_user_path %>
  <% end %>
</p>

<%= yield %>

</body>
</html>
