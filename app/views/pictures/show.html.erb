<h1> <%= @picture.title %> </h1>
<h3>Posted by: <%= @picture.user.name %></h3>

<%= link_to "Back to cute", pictures_path %>

<% if @picture.user == current_user %>
  <%= link_to "Edit this picture", edit_picture_path(@picture) %>
  <%= link_to "Delete this picture", picture_path, method: :delete, data: { confirm: "Are you sure you want to delete this?"} %>
<% end %>
